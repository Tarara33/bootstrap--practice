<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <div class="tags">
  <% if post.tags.present? %>
    <div class="d-flex flex-wrap">
      <% post.tags.each do |tag| %>
	<span class="badge badge-info mr-2 mb-2">
	  <%= link_to "#{tag.name}(#{tag.taggings_count})", posts_path(name: tag.name) %>
	</span>
      <% end %>
    </div>
  <% else %>
    <p>登録されているタグはありません</p>
  <% end %>
</div>

</div>
